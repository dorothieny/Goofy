<div class="container-form">
<h2 class="login">Авторизация</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field spot-input">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Твоя почта" %>
  </div>

  <div class="field spot-input">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Твой пароль" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :Запомнить_меня %>
    </div>
  <% end %>

  <div class="">
    <%= f.submit "Войти", class: "button-styled" %>
  </div>
<% end %>

<div class="shared">
<%= render "devise/shared/links" %>
</div>
</div>
<div class="cool-bg">
        <%= image_tag 'A_Registration_Screen.png' %>
        </div>